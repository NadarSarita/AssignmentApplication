<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/primaryTitleColor</item>
    </style>

    <style name="CardViewTheme" parent="CardView">
        <item name="android:textColor">@color/primaryTitleColor</item>
    </style>

    <style name="BottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/primaryTitleColor</item>
    </style>

</resources>
